<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blackback"
    tools:context=".According">

    <Button
        android:id="@+id/buttonMaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#070D25"
        android:fontFamily="sans-serif-medium"
        android:text="Filter Universities for Masters"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonPhd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#070D25"
        android:fontFamily="sans-serif-medium"
        android:text="Filter Universities for PHD"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvl5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>